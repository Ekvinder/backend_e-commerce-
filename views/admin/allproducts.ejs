<body>
    <%- include("header")%>
   
    <div id="page-wrapper" >
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                 <h2>All user detail</h2>   
                </div>
            </div>              
             <!-- /. ROW  -->
              <hr />
            <table border="2" class="table table-striped">
                <tr>
                    <th>Sr.no</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Discount</th>
                    <th>Category</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
               <%for(let k of b){%>
                <tr>
                    <td><a href="/productdetail/<%=k._id%>"><%=b.indexOf(k)+1%></a></td>
                    <td><img src="/uploads/<%=k.img%>" width="100%"></td>
                    <td><%=k.Name%></td>
                    <td><%=k.Description%></td>
                    <td><%=k.Price%></td>
                    <td><%=k.Discount%></td>
                    <td><a href="/productfrm/<%=k._id%>"><%=k.category%></a></td>
                    <td><a href="/updateproduct/<%=k._id%>">edit</a></td>
                    <td><a href="/deleteproduct/<%=k._id%>">delete</a></td>
                </tr>
              <%}%>

            </table>
            </div>
            <!-- /. PAGE INNER  -->
            </div>
            <!-- /. PAGE WRAPPER  -->
            </div>
                <%- include("footer")%>
            </body>
            </html>