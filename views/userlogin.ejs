<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Optional: Custom CSS -->
    <style>
        body {
            background-color: #f7f7f7;
        }
        .login-container {
          width: 350px;
            margin: auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
<%- include("frontEndHeader")%>
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="login-container">
            <h3 class="text-center mb-4">Login</h3>
            <form action="/userLogin" method="post">
                
                
                <!-- Email Input -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email" name="Email" value="admin@gmail.com" placeholder="Enter your email" required>
                </div>
                
                <!-- Password Input -->
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="Password" value="123" placeholder="Enter your password" required>
                </div>
                
                <!-- Login Button -->
                <button type="submit" class="btn btn-primary w-100">Login</button>
                
                <!-- Forgot Password Link -->
                <div class="mt-3 text-center">
                    <a href="/forgetpassword">Forgot Password?</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap 5 JS and Popper.js (for Bootstrap components) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <%- include("frontEndFooter")%>
</body>
</html>
